<div class="container mt-5">
  <h1 class="mb-4 text-center">Créer un nouveau potin</h1>

  <%= form_tag(gossips_path, method: "post", class: "needs-validation", novalidate: true) do %>
    <div class="form-group">
      <%= label_tag :title, 'Titre', class: 'form-label' %>
      <%= text_field_tag 'gossip[title]', nil, class: 'form-control', placeholder: 'Titre', required: true %>
      <div class="invalid-feedback">
        Veuillez entrer un titre.
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :content, 'Contenu', class: 'form-label' %>
      <%= text_area_tag 'gossip[content]', nil, class: 'form-control', placeholder: 'Contenu', required: true, rows: 5 %>
      <div class="invalid-feedback">
        Veuillez entrer du contenu pour le potin.
      </div>
    </div>

    <div class="text-center">
      <%= submit_tag "Créer", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
