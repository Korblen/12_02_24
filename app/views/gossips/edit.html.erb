<div class="container mt-5">
  <h1 class="mb-4">Modifier le Potin</h1>

  <%= form_with(model: @gossip, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, 'Titre', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Entrez le titre ici' %>
    </div>
  
    <div class="form-group">
      <%= form.label :content, 'Contenu', class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control', rows: 5, placeholder: 'Entrez le contenu du potin ici' %>
    </div>
  
    <div class="text-center">
      <%= form.submit "Enregistrer les modifications", class: "btn btn-primary" %>
    </div>
