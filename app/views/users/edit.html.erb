<div class="container mt-4">
  <h2 class="mb-3">Modifier le Profil</h2>
  <%= form_with(model: @user, local: true, class: 'needs-validation', novalidate: true) do |form| %>
    <div class="form-group">
      <%= form.label :first_name, 'Prénom', class: 'form-label' %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, 'Nom', class: 'form-label' %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :age, 'Âge', class: 'form-label' %>
      <%= form.number_field :age, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :description, 'Description', class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :city_name, 'Ville', class: 'form-label' %>
      <%= form.text_field :city_name, value: @user.city&.name, class: 'form-control' %>
    </div>

    <%= form.submit "Mettre à jour", class: "btn btn-primary" %>
  <% end %>
</div>