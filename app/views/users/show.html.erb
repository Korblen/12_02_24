<div class="container mt-5">
  <h1 class="mb-4">Profil de <%= @user.first_name %> <%= @user.last_name %></h1>
  
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Informations personnelles</h5>
      <p class="card-text"><strong>Email :</strong> <%= @user.email %></p>
      <p class="card-text"><strong>Description :</strong> <%= @user.description %></p>
      <p class="card-text"><strong>Ville :</strong> <%= link_to @user.city.name, city_path(@user.city) if @user.city %></p>
      <p class="card-text"><strong>Âge :</strong> <%= @user.age %></p>
    </div>
  </div>

  <h2 class="mt-4">Potins de <%= @user.first_name %></h2>
  <div class="list-group">
    <% @user.gossips.each do |gossip| %>
      <a href="<%= gossip_path(gossip) %>" class="list-group-item list-group-item-action">
        <h5 class="mb-1"><%= gossip.title %></h5>
        <p class="mb-1"><%= truncate(gossip.content, length: 100) %></p>
      </a>
    <% end %>
  </div>
</div>
